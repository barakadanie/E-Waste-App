<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayout"
    tools:openDrawer="start"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="3"
                    android:columnCount="2"
                    android:layout_margin="5dp"
                    android:alignmentMode="alignMargins"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mobile"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/mobile"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Devices"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/wearables"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/wearable"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wearables"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tvs"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tvs"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="TVs,Set Top Boxes &amp; monitors"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/laptop"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/laptop"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laptops,Tablets &amp; Computers"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/appliances"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/appliances"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appliances"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/printers"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/printer"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Printers &amp; Scanners"
                            android:textAlignment="center"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:layout_margin="5dp"
                    android:alignmentMode="alignMargins"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/learn"
                        android:clickable="true"
                        android:layout_width="165dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/green"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/printer"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:fontFamily="@font/opensans"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="130dp"
                            android:layout_gravity="center_horizontal"/>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        app:itemIconTint="@drawable/navigation_selector"
        app:itemTextColor="@drawable/navigationview_itemselected"
        android:id="@+id/navigationview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.drawerlayout.widget.DrawerLayout>